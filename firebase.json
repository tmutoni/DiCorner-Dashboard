{
  "hosting": {
    "public": "public",
    "rewrites": [
      {
        "source": "/dashboard/**",
        "destination": "/index.html"
      },
      {
        "source": "/profile/**",
        "destination": "/profile.html"
      },
      {
        "source": "/sign-up",
        "destination": "/sign-up/index.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "redirects": [
      {
        "source": "/old-path",
        "destination": "/new-path",
        "type": 301
      }
    ],
    "cleanUrls": true,
    "trailingSlash": false
  },
  "functions": {
    "source": "functions/lib",
    "ignore": [
      "node_modules",
      ".git",
      "firebase-debug.log",
      "firebase-error.log"
    ]
  }
}
